<Window x:Class="StockApp.AdminPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Admin Panel" Height="600" Width="800">
    <Grid>
        <!-- TabControl for different management sections -->
        <TabControl>
            <!-- Customer Management Tab -->
            <TabItem Header="Customer Management">
                <Grid Margin="10">
                    <DataGrid x:Name="dataGridCustomers" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="400" />
                    <Button Content="Load Customers" HorizontalAlignment="Left" VerticalAlignment="Bottom" Width="150" Margin="10" Click="LoadCustomers_Click" />
                    <Button Content="Generate Customers" HorizontalAlignment="Left" VerticalAlignment="Top" Width="150" Margin="10" Click="btnGenerateCustomers_Click" />
                </Grid>
            </TabItem>

            <!-- Product Management Tab -->
            <TabItem Header="Product Management">
                <Grid Margin="10">
                    <!-- Product List -->
                    <DataGrid x:Name="dataGridProducts" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" />

                    <!-- Form and Buttons for Product Management -->
                    <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Margin="10">
                        <!-- Product Form -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <!-- Product ID -->
                            <Grid>
                                <TextBox x:Name="txtProductId" Width="100" Margin="5" ToolTip="Product ID (For Update/Delete)" />
                                <TextBlock Text="Product ID" Foreground="Gray" Margin="10,2,0,0" IsHitTestVisible="False" 
                                           VerticalAlignment="Center" FontStyle="Italic" 
                                           Visibility="{Binding Text.Length, ElementName=txtProductId, Converter={StaticResource LengthToVisibilityConverter}}" />
                            </Grid>

                            <!-- Product Name -->
                            <Grid>
                                <TextBox x:Name="txtProductName" Width="150" Margin="5" ToolTip="Product Name" />
                                <TextBlock Text="Product Name" Foreground="Gray" Margin="10,2,0,0" IsHitTestVisible="False" 
                                           VerticalAlignment="Center" FontStyle="Italic" 
                                           Visibility="{Binding Text.Length, ElementName=txtProductName, Converter={StaticResource LengthToVisibilityConverter}}" />
                            </Grid>

                            <!-- Stock -->
                            <Grid>
                                <TextBox x:Name="txtStock" Width="100" Margin="5" ToolTip="Stock Quantity" />
                                <TextBlock Text="Stock" Foreground="Gray" Margin="10,2,0,0" IsHitTestVisible="False" 
                                           VerticalAlignment="Center" FontStyle="Italic" 
                                           Visibility="{Binding Text.Length, ElementName=txtStock, Converter={StaticResource LengthToVisibilityConverter}}" />
                            </Grid>

                            <!-- Price -->
                            <Grid>
                                <TextBox x:Name="txtPrice" Width="100" Margin="5" ToolTip="Price" />
                                <TextBlock Text="Price" Foreground="Gray" Margin="10,2,0,0" IsHitTestVisible="False" 
                                           VerticalAlignment="Center" FontStyle="Italic" 
                                           Visibility="{Binding Text.Length, ElementName=txtPrice, Converter={StaticResource LengthToVisibilityConverter}}" />
                            </Grid>
                        </StackPanel>

                        <!-- Action Buttons -->
                        <StackPanel Orientation="Horizontal" Margin="5">
                            <Button Content="Add Product" Width="120" Margin="5" Click="btnAddProduct_Click" />
                            <Button Content="Update Product" Width="120" Margin="5" Click="btnUpdateProduct_Click" />
                            <Button Content="Delete Product" Width="120" Margin="5" Click="btnDeleteProduct_Click" />
                            <Button Content="Refresh List" Width="120" Margin="5" Click="LoadProducts_Click" />
                        </StackPanel>
                    </StackPanel>
                </Grid>
            </TabItem>

            <!-- Order Management Tab -->
            <TabItem Header="Order Management">
                <Grid Margin="10">
                    <DataGrid x:Name="dataGridOrders" AutoGenerateColumns="True" HorizontalAlignment="Stretch" VerticalAlignment="Top" Height="300" />
                    <StackPanel Orientation="Horizontal" VerticalAlignment="Bottom" Margin="10">
                        <Grid>
                            <TextBox x:Name="txtOrderId" Width="150" Margin="5" ToolTip="Order ID" />
                            <TextBlock Text="Order ID" Foreground="Gray" Margin="10,2,0,0" IsHitTestVisible="False" 
                                       VerticalAlignment="Center" FontStyle="Italic" 
                                       Visibility="{Binding Text.Length, ElementName=txtOrderId, Converter={StaticResource LengthToVisibilityConverter}}" />
                        </Grid>
                        <Button Content="Approve Order" Width="120" Margin="5" Click="btnApproveOrder_Click" />
                        <Button Content="Cancel Order" Width="120" Margin="5" Click="btnCancelOrder_Click" />
                    </StackPanel>
                </Grid>
            </TabItem>
        </TabControl>

        <!-- Progress Bar -->
        <ProgressBar x:Name="progressBar" Height="20" Margin="10" VerticalAlignment="Bottom" Visibility="Collapsed" IsIndeterminate="True" />

    </Grid>
</Window>
